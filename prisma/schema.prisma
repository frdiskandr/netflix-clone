generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Tambahkan model Anda di sini, contoh:
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String? // Tanda tanya (?) berarti opsional
  posts Post[]  // Relasi ke model Post
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?
}